//todo
import java.util.Scanner;
package fr.hecten.easyline1;
import java.util.Scanner;
public class easyline1 {
    public static class Voyageur {
        private String nom;
        private int anneeNaissance;
        private String categorie;

        public Voyageur() {
            this.nom = "inconnu";
            this.anneeNaissance = 0;
            this.categorie = calculerCategorie();
        }
        public Voyageur(String nom, int anneeNaissance) {
            setNom(nom);
            setAnneeNaissance(anneeNaissance);
        }
        public void affiche() {
            int age = 2025 - anneeNaissance;
            System.out.println("nom: " + nom + ", année de naissance: " + anneeNaissance +
                    ", age: " + age + ", catégorie: " + getCategorie());
        }
        public String getNom() {
            return nom;
        }
        public void setNom(String nom) {
            if (nom.length() >= 2) {
                this.nom = nom;
            } else {
                System.err.println("le nom doit comporter au moins 2 caractères.");
            }
        }
        public int getAnneeNaissance() {
            return anneeNaissance;
        }
        public void setAnneeNaissance(int anneeNaissance) {
            if (anneeNaissance > 0 && anneeNaissance < 2025) {
                this.anneeNaissance = anneeNaissance;
            } else {
                System.err.println("l'année de naissance doit être <2025>");
            }
        }
        public String getCategorie() {
            return categorie;
        }
        public String calculerCategorie() {
            int age = 2025 - anneeNaissance;
            if (age < 1) {
                return "nourrisson";
            } else if (age >= 1 && age <= 18) {
                return "enfant";
            } else if (age > 18 && age <= 60) {
                return "adulte";
            } else {
                return "senior";
            }
        }
    }
    public static void main(String[] args) {
        Voyageur voyageur1 = new Voyageur("Jo", 1990);
        System.out.println("voyageur 1 :");
        voyageur1.affiche();
        System.out.println();

        Voyageur voyageur2 = new Voyageur("JP", 1999);
        System.out.println("voyageur 2 :");
        voyageur2.affiche();
        System.out.println();
        Scanner scanner = new Scanner(System.in);
        Voyageur voyageur3 = new Voyageur();
        System.out.println("entrez le nom du voyageur :");
        voyageur3.setNom(scanner.nextLine());
        System.out.println("entrez l'année de naissance :");
        voyageur3.setAnneeNaissance(scanner.nextInt());

        System.out.println("voyageur 3 :");
        voyageur3.affiche();
        scanner.close();
    }
}
